    "from random import randint\n",
    "\n",
    "Lista=[]  \n",
    "def listait():\n",
    "    listait=[]\n",
    "    qntd=int(input(\"Quantos elementos vai ter a lista: \"))\n",
    "    i=1\n",
    "    while(i<=qntd):\n",
    "        nr=input(\"Intoduza o elemento número \" + str(i) + \" : \")\n",
    "        if nr!=\"\":\n",
    "            listait.append(int(nr))\n",
    "            i+=1\n",
    "        else:\n",
    "            print(\"Valor inválido!\")\n",
    "    return(listait)\n",
    "\n",
    "def listaaut():\n",
    "    listaaut=[]\n",
    "    qntd=int(input(\"Quantos elementos vai ter a lista: \"))\n",
    "    i=1\n",
    "    while(i<=qntd):\n",
    "        nr=randint(1,100)\n",
    "        listaaut.append(nr)\n",
    "        i+=1\n",
    "    return(listaaut)\n",
    "\n",
    "\n",
    "def BubbleSort(Lista):\n",
    "    n=len(Lista)\n",
    "    i=1\n",
    "    while i==1:\n",
    "        for j in range(0, n-1):\n",
    "                if(Lista[j] > Lista[j+1]):\n",
    "                    Lista[j], Lista[j+1] = Lista[j+1], Lista[j]\n",
    "                    BubbleSort(Lista)\n",
    "                else:\n",
    "                    i=0\n",
    "    return Lista\n",
    "\n",
    "def media(Lista):\n",
    "    i=0\n",
    "    a=0\n",
    "    while i<len(Lista):\n",
    "        a+=Lista[i]\n",
    "        i+=1\n",
    "    return(a/len(Lista))\n",
    "\n",
    " \n",
    "def maximo(Lista)       :\n",
    "    a=BubbleSort(Lista)\n",
    "    return(a[len(Lista)-1])\n",
    "\n",
    "def somatorio(Lista):\n",
    "    a=0\n",
    "    for i in range(len(Lista)):\n",
    "        a+=Lista[i]\n",
    "    return(a)\n",
    "\n",
    "def encontranr(Lista):\n",
    "    i=int(input(\"Indique o número que deseja saber a posição: \"))\n",
    "    a=0\n",
    "    while i!=Lista[a]:\n",
    "        a+=1\n",
    "    else:\n",
    "        print(\"o número está na posição com indíce: \", a)\n",
    "    return a\n",
    "\n",
    "def menu():\n",
    "    print(\"\"\" \n",
